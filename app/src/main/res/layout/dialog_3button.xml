<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mvm="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/ct_sz_30dp"
    android:layout_marginLeft="@dimen/ct_sz_30dp"
    android:background="@drawable/ct_dialog_bg"
    android:orientation="vertical" >
    <!-- 	android:background="@drawable/br_dialog_background" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <!-- <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/ct_sz_30dp"
            android:layout_height="@dimen/ct_sz_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ct_sz_10dp"
            android:src="@mipmap/icon_review"/>-->

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/ct_sz_5dp"
            android:layout_marginTop="@dimen/ct_sz_5dp"
            android:layout_marginLeft="@dimen/ct_sz_10dp"
            android:layout_gravity="left"
            android:text="Rate Content Transfer"
            android:gravity="center"
            android:textColor="#343434"
            android:textSize="@dimen/ct_txt_sz_18sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="@dimen/ct_sz_5dp"
        android:layout_marginRight="@dimen/ct_sz_5dp"
        android:visibility="gone"
        android:background="@color/ct_mf_black_color" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView

                android:id="@+id/messageTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ct_sz_5dp"
                android:layout_marginTop="@dimen/ct_sz_16dp"
                android:layout_marginLeft="@dimen/ct_sz_10dp"
                android:layout_marginRight="@dimen/ct_sz_10dp"
                android:layout_marginBottom="@dimen/ct_sz_16dp"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/vz_charcoal_color"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/messageTextViewNotice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="left"
                    android:textColor="@color/vz_charcoal_color"
                    android:textSize="@dimen/ct_txt_sz_13sp"
                    android:textStyle="italic"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/ct_sz_20dp"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <TextView

                android:id="@+id/messageTextView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/vz_charcoal_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView

                android:id="@+id/messageTextViewNote"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="1dp"
                android:gravity="left"
                android:textColor="@color/vz_charcoal_color"
                android:textSize="13sp"
                android:textStyle="italic"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/ct_sz_10dp"
            android:layout_marginRight="@dimen/ct_sz_10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/vz_white_color"
                android:textColor="@color/vz_native_button_color"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginRight="@dimen/ct_sz_10dp"
                android:text="No, Thanks"
                android:textStyle="bold"
                android:visibility="visible" />

            <!--             android:textColor="@drawable/br_dialog_button_color_selector" -->

            <TextView
                android:id="@+id/neutralButton"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/vz_white_color"
                android:textColor="@color/vz_native_button_color"
                android:text="Remind me later"
                android:textStyle="bold"
                android:textSize="12sp"
                android:visibility="visible"/>

            <!--             android:textColor="@drawable/br_dialog_button_color_selector" -->

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/vz_white_color"
                android:textColor="@color/vz_native_button_color"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/ct_sz_10dp"
                android:text="Rate App"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>